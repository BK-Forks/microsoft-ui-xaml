<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.UI.Xaml.Controls"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives">

    <Style TargetType="local:InfoBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:InfoBar">
                    <Border x:Name="Container" 
                        VerticalAlignment="Top"
                        Background="Transparent"
                        AutomationProperties.Name="{TemplateBinding AutomationProperties.Name}">

                        <VisualStateManager.VisualStateGroups>
                            
                            <VisualStateGroup x:Name="SeverityLevels">
                                <VisualState x:Name="Default"/>
                                
                                <VisualState x:Name="Critical">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeverityCriticalStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xEA39;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Warning">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeverityWarningStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Success">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeveritySuccessStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xF13E;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="IconStates">
                                <VisualState x:Name="StandardIconVisible">
                                    <VisualState.Setters>
                                        <Setter Target="StandardIcon.Visibility" Value="Visible"/>
                                        <Setter Target="UserIconBorder.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="UserIconVisible">
                                    <VisualState.Setters>
                                        <Setter Target="UserIconBorder.Visibility" Value="Visible"/>
                                        <Setter Target="StandardIcon.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="NoIconVisible"/>
                            </VisualStateGroup>

                            <VisualStateGroup>
                                <VisualState x:Name="CloseButtonCollapsed"/>
                                <VisualState x:Name="CloseButtonVisible">
                                    <VisualState.Setters>
                                        <Setter Target="CloseButton.Visibility" Value="Visible"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="InfoBarVisibility">
                                <VisualState x:Name="InfoBarVisible"/>

                                <VisualState x:Name="InfoBarCollapsed">
                                    <VisualState.Setters>
                                        <!-- ### then clean up container...? -->
                                        <Setter Target="InfoBarGrid.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            
                        </VisualStateManager.VisualStateGroups>

                        <!-- ### what does this grid do...? -->
                        <Grid x:Name="InfoBarGrid"
                            HorizontalAlignment="Stretch"
                            MinHeight="{ThemeResource InfoBarMinHeight}"
                            Background="{ThemeResource InfoBarSeverityDefaultStatusColor}" >

                            <!-- ### all these magic numbers need to move to themeresources -->
                            <Grid x:Name="ContentRootGrid" Margin="12,0,0,0">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                    <ColumnDefinition Width="*"/>    <!-- Title, message, and action -->
                                    <ColumnDefinition Width="Auto"/> <!-- Close button -->
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- ### could be that these could be combined into one. -->
                                <IconSourceElement x:Name="StandardIcon"
                                    Grid.Column="0"
                                    Margin="0,10,12,10"
                                    VerticalAlignment="Top"
                                    Visibility="Collapsed">
                                    <IconSourceElement.IconSource>
                                        <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" FontSize="20"/>
                                    </IconSourceElement.IconSource>
                                </IconSourceElement>

                                <Border x:Name="UserIconBorder"
                                    Grid.Column="0"
                                    Margin="0,10,12,10"
                                    VerticalAlignment="Top"
                                    Child="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TemplateSettings.IconElement}"
                                    Visibility="Collapsed"/>

                                <!-- ### replace this with new panel -->
                                <primitives:InfoBarPanel Grid.Column="1">

                                <!-- <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    Margin="0,10,0,0"-->

                                    <TextBlock x:Name="Title"
                                        Grid.Column="0"
                                        primitives:InfoBarPanel.HorizontalMargin="0,10,0,0"
                                        primitives:InfoBarPanel.VerticalMargin="0,10,0,0"
                                        Text="{TemplateBinding Title}"
                                        AutomationProperties.LandmarkType="Navigation"
                                        FontWeight="SemiBold"
                                        FontSize="{ThemeResource InfoBarFontSize}"/>

                                    <TextBlock x:Name="Message" 
                                        Grid.Column="1"
                                        Text="{TemplateBinding Message}" 
                                        FontSize="{ThemeResource InfoBarFontSize}"
                                        primitives:InfoBarPanel.HorizontalMargin="8,10,0,0"
                                        primitives:InfoBarPanel.VerticalMargin="0,4,0,0" 
                                        TextTrimming="CharacterEllipsis"/>

                                    <ContentPresenter
                                        Grid.Column="2"
                                        primitives:InfoBarPanel.HorizontalMargin="12,0,0,0"
                                        primitives:InfoBarPanel.VerticalMargin="0,10,0,14" 
                                        Content="{TemplateBinding ActionButton}">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="Button">
                                                <Style.Setters>
                                                    <Setter Property="MinWidth" Value="96"/>
                                                    <Setter Property="Height" Value="24"/>
                                                    <Setter Property="Padding" Value="8,0,8,1"/>
                                                    <Setter Property="CornerRadius" Value="2,2,2,2"/>
                                                </Style.Setters>
                                            </Style>

                                            <Style TargetType="HyperlinkButton">
                                                <Style.Setters>
                                                    <Setter Property="FontSize" Value="{ThemeResource InfoBarFontSize}"/>
                                                    <Setter Property="Foreground" Value="{ThemeResource InfoBarHyperlinkButtonColor}"/>
                                                </Style.Setters>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>

                                </primitives:InfoBarPanel>
                                <!--</Grid>-->

                                <ContentPresenter
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"/>

                                <!-- ### should probably set most of this in a custom style -->
                                <Button Name="CloseButton"
                                    Grid.Column="2"
                                    Command="{TemplateBinding CloseButtonCommand}" 
                                    CommandParameter="{TemplateBinding CloseButtonCommandParameter}"
                                    Height="{StaticResource InfoBarCloseButtonSize}"
                                    Width="{StaticResource InfoBarCloseButtonSize}"
                                    VerticalAlignment="Top"
                                    Visibility="Collapsed"
                                    Background="Transparent"
                                    FontSize="16">

                                    <Viewbox Width="{StaticResource InfoBarCloseButtonGlyphSize}"
                                        Height="{StaticResource InfoBarCloseButtonGlyphSize}">
                                        <SymbolIcon Symbol="Cancel"/>
                                    </Viewbox>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
