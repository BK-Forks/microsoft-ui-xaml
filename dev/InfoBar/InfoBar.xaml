<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.UI.Xaml.Controls">

    <Style TargetType="local:InfoBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:InfoBar">
                    <Border x:Name="Container" 
                        VerticalAlignment="Top"
                        Background="Transparent"
                        AutomationProperties.Name="{TemplateBinding AutomationProperties.Name}">

                        <VisualStateManager.VisualStateGroups>
                            
                            <VisualStateGroup x:Name="SeverityLevels">
                                <VisualState x:Name="Default"/>
                                
                                <VisualState x:Name="Critical">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeverityCriticalStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xEA39;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Warning">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeverityWarningStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Informational">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeverityInformationalStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Success">
                                    <VisualState.Setters>
                                        <Setter Target="InfoBarGrid.Background" Value="{ThemeResource InfoBarSeveritySuccessStatusColor}"/>
                                        <Setter Target="StandardIcon.IconSource">
                                            <Setter.Value>
                                                <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xF13E;" FontSize="20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="IconStates">
                                <VisualState x:Name="StandardIconVisible">
                                    <VisualState.Setters>
                                        <Setter Target="StandardIcon.Visibility" Value="Visible"/>
                                        <Setter Target="UserIcon.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="UserIconVisible">
                                    <VisualState.Setters>
                                        <Setter Target="UserIcon.Visibility" Value="Visible"/>
                                        <Setter Target="StandardIcon.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="NoIconVisible"/>
                            </VisualStateGroup>

                            <VisualStateGroup>
                                <VisualState x:Name="CloseButtonCollapsed"/>
                                <VisualState x:Name="CloseButtonVisible">
                                    <VisualState.Setters>
                                        <Setter Target="CloseButton.Visibility" Value="Visible"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="InfoBarVisibility">
                                <VisualState x:Name="Visible">
                                    <VisualState.Setters>
                                        <Setter Target="Container.Visibility" Value="Visible"/>
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Collapsed">
                                    <VisualState.Setters>
                                        <Setter Target="Container.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            
                        </VisualStateManager.VisualStateGroups>

                        <Grid x:Name="InfoBarGrid"
                            HorizontalAlignment="Stretch"
                            MinHeight="{ThemeResource InfoBarMinHeight}"
                            Background="{ThemeResource InfoBarSeverityDefaultStatusColor}" >

                            <!-- ### all these magic numbers need to move to themeresources -->
                            <Grid x:Name="ContentRootGrid">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                    <ColumnDefinition Width="Auto"/> <!-- Title -->
                                    <ColumnDefinition Width="Auto"/> <!-- Message -->
                                    <ColumnDefinition Width="Auto"/> <!-- Action button -->
                                    <ColumnDefinition Width="Auto"/> <!-- Hyperlink -->
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/> <!-- Close button -->
                                </Grid.ColumnDefinitions>

                                <!-- ### could be that these could be combined into one. -->
                                <IconSourceElement x:Name="StandardIcon"
                                    Grid.Column="0"
                                    Margin="12,10,0,10">
                                    <IconSourceElement.IconSource>
                                        <FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" FontSize="20"/>
                                    </IconSourceElement.IconSource>
                                </IconSourceElement>

                                <IconSourceElement x:Name="UserIcon"
                                    Grid.Column="0"
                                    Margin="12,10,0,10"
                                    IconSource="{TemplateBinding IconSource}"/>

                                <TextBlock x:Name="Title"
                                    Grid.Column="1"
                                    Text="{TemplateBinding Title}"
                                    AutomationProperties.LandmarkType="Navigation"
                                    FontWeight="SemiBold"
                                    FontSize="{ThemeResource InfoBarFontSize}"
                                    Margin="12,10,0,0"/>
                                <!-- ###  not sure about this" MaxWidth="200" -->

                                <TextBlock x:Name="Message" 
                                    Grid.Column="2"
                                    Text="{TemplateBinding Message}" 
                                    FontSize="{ThemeResource InfoBarFontSize}"
                                    Margin="8,10,0,0"
                                    TextTrimming="CharacterEllipsis"/>

                                <Button Name="ActionButton" 
                                    Grid.Column="3"
                                    Content="{TemplateBinding ActionButtonContent}" 
                                    Command="{TemplateBinding ActionButtonCommand}" 
                                    Style="{TemplateBinding ActionButtonStyle}"
                                    MinWidth="96"
                                    Height="24"
                                    Margin="12,0,0,0"
                                    Padding="8,0,8,1"
                                    CornerRadius="2,2,2,2"/>

                                <HyperlinkButton x:Name="HyperlinkButton" 
                                    Grid.Column="4"
                                    Margin="12,0,0,0"
                                    Content="{TemplateBinding HyperlinkButtonContent}"
                                    FontSize="{ThemeResource InfoBarFontSize}"
                                    Foreground="{ThemeResource InfoBarHyperlinkButtonColor}"/>

                                <!-- ### should probably set most of this in a custom style -->
                                <Button Name="CloseButton" 
                                    Grid.Column="6"
                                    Command="{TemplateBinding CloseButtonCommand}" 
                                    CommandParameter="{TemplateBinding CloseButtonCommandParameter}"
                                    Height="{StaticResource InfoBarCloseButtonSize}"
                                    Width="{StaticResource InfoBarCloseButtonSize}"
                                    Visibility="Collapsed"
                                    Background="Transparent"
                                    FontSize="16">

                                    <Viewbox Width="{StaticResource InfoBarCloseButtonGlyphSize}"
                                        Height="{StaticResource InfoBarCloseButtonGlyphSize}">
                                        <SymbolIcon Symbol="Cancel"/>
                                    </Viewbox>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
